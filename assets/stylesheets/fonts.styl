// Icons for weather fonts
@font-face
    font-family MeteoconsRegular
    src url('/fonts/meteocons/meteocons-webfont.eot')
    src url('/fonts/meteocons/meteocons-webfont.eot?#iefix') format('embedded-opentype')
    src url('/fonts/meteocons/meteocons-webfont.woff') format('woff')
    src url('/fonts/meteocons/meteocons-webfont.ttf') format('truetype')
    src  url('/fonts/meteocons/meteocons-webfont.svg#MeteoconsRegular') format('svg')
    font-weight normal
    font-style normal

.weather-icon
  font-family MeteoconsRegular


