//colors
suble-snow = #DCDDE1;
dirty-snow = #D7DACF;
dark-snow  = #BEC3BC;
gray-sky   = #8F9A9C;
dark-sky   = #65727A;
fire-red   = #D45B39;
ember      = #E68525;
charcoal   = #383636;

global-reset()
@import 'nib'
@import 'jeet'
@import 'rupture'
@import 'type.css'
@import 'fonts'
@import 'spinner.css'
@import 'glimpses/intro.styl'
@import 'glimpses/daydream.styl'
@import 'glimpses/commitment.styl'
@import 'glimpses/generic.styl'



html, body
  position: relative
  height: 100%
  background: suble-snow

body
  color: #323232
  position: relative

a
  text-decoration: none;
  color: ember

  &:hover
    text-decoration: underline

.absolute-center
  center()

.header-container
  padding: 10px
  height: 50%
  color: white;
  text-shadow black 0px 2px 4px;


  .one-hundred-days

    display: inline-block
    text-shadow black 0px 2px 4px;

  .object

    display: inline-block
    margin: 0px 10px

    span
      z-index: -1000
      opacity: 0

  .description
    margin: 18px 0px

    opacity(0)

  .play
    background: rgba(33,33,33,0.8)

    padding: 10px
    width: 72px
    height: 72px
    border-radius(72px)
    line-height: 72px

    display: inline-block
    opacity(0)

.subtitle
  border-top: 2px solid dark-sky
  border-bottom: 1px solid dark-sky
  padding: 10px 0px;

  color: fire-red

.bottom-nav
  color: white
  width: 100%
  height: 56px
  background: rgba(33,33,33,0.8)
  bottom: 0px
  left: 0px
  z-index: 10
  position: absolute

.secondary-info
  column(2)
  position: absolute
  top: 0px
  right: 0px

.glimpse{
  width: 100%
  height: 100%
  position: relative
  display: block
  background-size: cover
  overflow: hidden

  &:active {
    z-index: 10
  }
}

.left-align{
  text-align: left
}

.hidden{
  opacity: 0
}

#viewport {
  height: 100%;
  overflow: auto;
}

.overlay
  position: absolute
  z-index: 3
  background: #343434 url('/images/texture.png')
  width: 100%
  height: 100%
  transition: all 0.5s ease-in-out
  opacity(0.8)

.dark-snow
  color: dark-sky
.suble-snow
  color: suble-snow

.border
  border-top: 2px solid dark-snow
  border-bottom: 1px solid dark-snow

.space-1
  margin-bottom: 18px

.hidden
  opacity(0);

.play {
  cursor: pointer
  display: block

  text-align: center
}


// new
button
  cursor: pointer

  color: inherit
  background: inherit
  display: inline-block
  outline: none
  border: 1vh solid suble-snow
  transition: all 0.2s ease-in-out

  &:hover
    color: ember
    border-color: ember


