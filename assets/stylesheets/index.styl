//colors
suble-snow = #DCDDE1;
dirty-snow = #D7DACF;
dark-snow  = #BEC3BC;
gray-sky   = #8F9A9C;
dark-sky   = #65727A;
fire-red   = #D45B39;
ember      = #E68525;


@import 'nib'
@import 'type.css'
@import 'fonts'
@import 'grid.styl'
@import 'spinner.css'
@import 'glimpses/intro.styl'
@import 'glimpses/preface.styl'
@import 'glimpses/nostalgia.styl'
@import 'glimpses/commitment.styl'
@import 'glimpses/preparation.styl'
@import 'glimpses/fresh_tracks.styl'
@import 'glimpses/generic.styl'

// Config
@columns = 12
@column-width = 60;
@gutter-width = 20;
@total-width = 100%;

global-reset()


html, body
  position: relative
  height: 100%
  background: suble-snow

body
  color: #323232
  position: relative
  font-size: 14px


// Typo grid

// Typographic grid
p
  margin-bottom: 18px

h2
  font-size: 32px
  margin-bottom: 18px

a
  text-decoration: none;
  color: ember

  &:hover
    text-decoration: underline

.absolute-center
  column(6)
  overflow: auto
  margin: auto
  position: absolute
  top: 10px
  left: 0
  bottom: 0
  right: 0
  z-index: 10
  text-align: center
  height: 70%
  overflow: hidden

.header-container
  padding: 10px
  height: 50%
  color: white;
  text-shadow black 0px 2px 4px;


  .one-hundred-days
    font-size: 72px
    display: inline-block
    text-shadow black 0px 2px 4px;

  .object
    font-size: 90px
    display: inline-block
    margin: 0px 10px

    span
      z-index: -1000
      opacity: 0

  .description
    margin: 18px 0px
    font-size: 18px
    opacity(0)

  .play
    background: rgba(33,33,33,0.8)
    font-size: 32px
    padding: 10px
    width: 72px
    height: 72px
    border-radius(72px)
    line-height: 72px
    font-size: 60px
    display: inline-block
    opacity(0)

.subtitle
  border-top: 2px solid dark-sky
  border-bottom: 1px solid dark-sky
  padding: 10px 0px;
  font-size: 18px
  color: fire-red

h1{
  font-size: 72px
  color: suble-snow
}

.bottom-nav
  color: white
  width: 100%
  height: 56px
  background: rgba(33,33,33,0.8)
  bottom: 0px
  left: 0px
  z-index: 10
  position: absolute

.secondary-info
  column(2)
  position: absolute
  top: 0px
  right: 0px

.glimpse{
  width: 100%
  height: 100%
  position: relative
  display: block
  background-size: cover
  overflow: hidden

  &:active {
    z-index: 9
  }
}

.left-align{
  text-align: left
}

.hidden{
  opacity: 0
}

#viewport {
  height: 100%;
  overflow: auto;
}

.overlay
  position: absolute
  z-index: 3
  background: #343434 url('/images/texture.png')
  width: 100%
  height: 100%
  opacity(0.75)
.stats
  position: fixed
  right: 0


.dark-snow
  color: dark-sky
.suble-snow
  color: suble-snow

.border
  border-top: 2px solid dark-snow
  border-bottom: 1px solid dark-snow

.space-1
  margin-bottom: 18px

.hidden
  opacity(0);

.play {
  cursor: pointer
  display: block
  font-size: 54px
  text-align: center
}
